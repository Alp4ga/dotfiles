#!/bin/bash

blih.py -u eliott.martin@epitech.eu repository create $1
echo "[ OK ] Repository create"
blih.py -u eliott.martin@epitech.eu repository setacl $1 ramassage-tek r
echo "[ OK ] Repository permission ramassage-tek"
git clone git@git.epitech.eu:/eliott.martin@epitech.eu/$1
echo "[ OK ] Repository clone"

ADD="True"

while [ $ADD == "True" ]
do
    echo -n "Add permission ? (y/n):  "
    read setacl
    if [ "$setacl" == "y" ]; then
	echo -n "user: "
	read user
	echo -n "permissions: "
	read permissions
	blih.py -u eliott.martin@epitech.eu repository setacl $1 $user $permissions
    else
	ADD="False"
    fi
done
